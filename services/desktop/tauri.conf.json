{
  "build": {
    "devPath": "http://localhost:5173",
    "distDir": "../frontend/build",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Libretrix",
    "version": "0.1.0"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "org.libretrix.libretrix",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Libretrix",
        "width": 800,
        "height": 600
      }
    ]
  }
}
