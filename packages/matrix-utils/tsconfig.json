{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}